{
  "manifest_version": 3,
  "name": "TimeMachine",
  "version": "1.6.1",
  "homepage_url": "https://harshdev625.github.io/TimeMachine/",
  "description": "Track your browsing habits and boost productivity with insightful stats.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "identity",
    "alarms",
    "idle",
    "windows",
    "notifications"
  ],
  "oauth2": {
    "client_id": "1042290616625-ehk16f42jqriqg0ubb237n3r0352mm3p.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  },
  "host_permissions": [
    "https://api.emailjs.com/*",
    "https://quickchart.io/*",
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*",
    "https://people.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-blocker.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "tm_toggle_pomodoro": {
      "suggested_key": { "default": "Ctrl+Shift+P" },
      "description": "Start/Stop Pomodoro Timer"
    },
    "tm_toggle_expand": {
      "suggested_key": { "default": "Ctrl+Shift+E" },
      "description": "Toggle expanded popup size"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.emailjs.com https://quickchart.io https://www.googleapis.com https://people.googleapis.com https://accounts.google.com"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "chart.min.js",
        "report-scheduler.js",
        "guide.html",
        "blocked.html",
        "blocked.js",
        "modules/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
